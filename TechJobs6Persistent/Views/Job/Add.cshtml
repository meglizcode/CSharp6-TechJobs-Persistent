@using TechJobs6Persistent.ViewModels;
@model AddJobViewModel;

<h1>Add Job</h1>

<form asp-controller="Job" asp-action="Add" method="post">

    <div class="form-group">
        <label asp-for="Name">Name :</label>
        <input asp-for="Name" class="from-control"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    </div>
    <br />
    <div class="form-group">
        <label>Employer :</label>
        <select asp-for="EmployerId" asp-items="@Model.Employers">
        </select>
    </div>
    <br />
    <input type="submit" value="Add Job" />
    
    <br />
    <br /> 
    <h3>Need to Add a Employer?</h3>
    <a asp-controller="Employer" asp-action="ProcessCreateEmployerForm">Click Here!</a>
</form>